---
import { ulid } from "ulid";
const { control, value } = Astro.props;
const id = ulid();
---

<label for={id} class="form-label">{control.label}</label>
{
    control.variant === "multi-line" ? (
        <textarea id={id} class="form-control">
            {value[control.id]}
        </textarea>
    ) : (
        <input
            type={control.variant === "email" ? control.variant : "text"}
            class="form-control"
            id={id}
            value={value[control.id]}
        />
    )
}
