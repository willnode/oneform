---
import Number from "./Number.astro";
import Option from "./Option.astro";
import Text from "./Text.astro";
import Group from "./Group.astro";
import List from "./List.astro";
import Checkbox from "./Checkbox.astro";
import Hidden from "./Hidden.astro";
import Time from "./Time.astro";

const { parentID, control, value } = Astro.props;
---

{control?.type === "hidden" && <Hidden parentID={parentID} control={control} value={value} />}
{control?.type === "checkbox" && <Checkbox parentID={parentID} control={control} value={value} />}
{control?.type === "time" && <Time parentID={parentID} control={control} value={value} />}
{control?.type === "number" && <Number parentID={parentID} control={control} value={value} />}
{control?.type === "option" && <Option parentID={parentID} control={control} value={value} />}
{control?.type === "text" && <Text parentID={parentID} control={control} value={value} />}
{control?.type === "group" && <Group parentID={parentID} control={control} value={value} />}
{control?.type === "list" && <List parentID={parentID} control={control} value={value} />}
