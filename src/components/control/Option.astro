---
import { ulid } from "ulid";
const { control, value } = Astro.props;
const id = ulid();
---

<label for={id} class="form-label">{control.label}</label>
<select class="form-select" id={id}>
    {
        Array.isArray(control.options?.values)
            ? control.options?.values.map((x: any) => (
                  <option selected={x === value[control.id]}>{x}</option>
              ))
            : null
    }
</select>
