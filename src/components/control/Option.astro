---
import { ulid } from "ulid";
const { control, value } = Astro.props;
const id = ulid();
---

{
    control.label && (
        <label for={id} class="form-label">
            {control.label}
        </label>
    )
}
<select class="form-select" id={id}>
    <option></option>
    {
        Array.isArray(control?.values)
            ? control.values.map((x: any) => (
                  <option selected={x.value === value?.[control.id]}>{x.value}</option>
              ))
            : null
    }
</select>
